@model Bikes.ViewModels.RoleManagmentVM

<p> Manage User Role
</p>


<div class="card-body p-4">
    
<form method="post" class="row">
        <input asp-for="ApplicationUser.Id" hidden />
    <div class="border-primary">
        <div class="form-floating py-2 col-12">
                <input asp-for="ApplicationUser.FirstName" readonly class="form-control border-0 shadow" />
                <label asp-for="ApplicationUser.FirstName" class="ms-2"> </label>
        </div>

            <div class="form-floating py-2 col-12">
                <select asp-for="ApplicationUser.Role" asp-items="@Model.RoleList" class="form-select"></select>
            </div>
            

            <div class="row pt-2" >
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control"> Update Role </button>

                </div>
            </div>
            <div class="col-6 col-md-3">
                <a asp-action="Index" class="btn btn-outline-primary border form-control"> Back To List</a>
            </div>
            
    </div>
</form>
</div>